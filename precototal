#Programa para calcular o valor total de uma compra e exibir informações do produto comprado
nome_prod = "Cadeira Infantil"
price_unit = 12.40
unit = 3
full_price = price_unit * unit
print(f"Nome do produto: {nome_prod}")
print(f"Preço unitário: R$ {price_unit:.2f}")
print(f"Quantidade: {unit}")
print(f"O valor final da compra é: R$ {full_price:.2f}")
